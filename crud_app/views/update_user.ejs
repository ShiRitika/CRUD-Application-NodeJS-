<!-- include header -->
<%-include("include/_header");%>
<!-- /include header -->

<!-- main section/main site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fa fa-angle-double-left"></i>All Users</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update User</h2>
      <span class="text-light">Use a below form to update an account</span>
    </div>

    <!-- form handling -->
    <form method="POST" id="update_user">
      <div class="new_user">
        <div class="form-group">
          <label for="name" class="text-light">Name</label>
          <input type="hidden" name="id" value="<%= user._id %>" />
          <!-- <%= user.name %> is used to get data back on update -->
          <input
            type="text"
            name="name"
            value="<%= user.name %>"
            placeholder="name"
          />
        </div>
        <div class="form-group">
          <label for="email" class="text-light">Email</label>
          <input
            type="text"
            name="email"
            value="<%= user.email %>"
            placeholder="xyz@gmail.com"
          />
        </div>
        <div class="form-group">
          <label for="gender" class="text-light">Gender</label>
          <div class="radio inline">
            <input type="radio" id="radio-1" name="gender" value="Male"<%=
            user.gender == "Male" ? "checked" : "" %> >
            <label for="radio-1" class="radio-label">Male</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-2" name="gender" value="Female" <%=
            user.gender == "Female" ? "checked" : "" %> >
            <label for="radio-2" class="radio-label">Female</label>
          </div>
        </div>
        <div class="form-group">
          <label for="city" class="text-light">City</label>
          <input
            type="text"
            name="city"
            value="<%= user.city %>"
            placeholder="address"
          />
        </div>
        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>

<!-- /main section/main site -->

<!-- include footer -->
<%- include("include/_footer")%>
<!-- /include footer -->
